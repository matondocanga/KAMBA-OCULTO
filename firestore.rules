rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // USUÁRIOS
    match /users/{userId} {
      allow read: if isSignedIn(); // Necessário para buscar por email
      allow create, update: if isSignedIn() && isOwner(userId);
      allow delete: if false;
    }

    // GRUPOS
    match /groups/{groupId} {
      allow create: if isSignedIn();
      
      // LEITURA: Qualquer utilizador logado pode ver os DADOS do grupo (Nome, Foto, Membros)
      // Isso é essencial para que o Link de Convite mostre onde a pessoa está a entrar.
      // A privacidade real está nas MENSAGENS (regra abaixo).
      allow read: if isSignedIn();
      
      // ATUALIZAÇÃO:
      allow update: if isSignedIn() && (
        // 1. O ADMIN (Dono) pode alterar tudo
        resource.data.adminId == request.auth.uid ||
        
        // 2. MEMBROS: Só podem entrar/sair (alterar array members/pending)
        (
           !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['status', 'drawResult', 'adminId', 'name', 'groupImage', 'budget'])
        )
      );
    }

    // MENSAGENS (CHAT) - AQUI ESTÁ A SEGURANÇA MÁXIMA
    match /groups/{groupId}/messages/{messageId} {
      // Só lê se for membro REAL do grupo
      allow read: if isSignedIn() && exists(/databases/$(database)/documents/groups/$(groupId)) && 
                  (get(/databases/$(database)/documents/groups/$(groupId)).data.isPublic == true || 
                   request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
      
      allow create: if isSignedIn();
    }
    
    match /system/public_queue {
       allow read, write: if isSignedIn();
    }
  }
}
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Funções auxiliares
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isMember(resourceData) {
      return request.auth.uid in resourceData.members;
    }
    function isAdmin(resourceData) {
      return request.auth.uid == resourceData.adminId;
    }

    // Regras de Usuários
    match /users/{userId} {
      allow read: if isSignedIn(); // Qualquer um logado pode ver perfis (para adicionar aos grupos)
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId); // Apenas o dono edita
      allow delete: if false; // Ninguém deleta contas via cliente
    }

    // Regras de Grupos
    match /groups/{groupId} {
      allow create: if isSignedIn();
      // Ler: Se for público ou se for membro
      allow read: if isSignedIn() && (resource.data.isPublic == true || isMember(resource.data) || request.auth.uid in resource.data.pendingMembers);
      // Atualizar: Apenas membros podem atualizar arrays (entrar/sair)
      // Configurações críticas (nome, status) deveriam ser apenas Admin, mas para simplificar:
      allow update: if isSignedIn() && (isMember(resource.data) || resource.data.isPublic == true); 
    }

    // Regras de Mensagens (Subcoleção)
    match /groups/{groupId}/messages/{messageId} {
      allow read: if isSignedIn() && exists(/databases/$(database)/documents/groups/$(groupId)) && 
                  (get(/databases/$(database)/documents/groups/$(groupId)).data.isPublic == true || 
                   request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
      allow create: if isSignedIn();
    }
    
    // Fila Pública
    match /system/public_queue {
       allow read, write: if isSignedIn();
    }
  }
}